{
  "name": "si-desktop",
  "version": "0.0.1",
  "author": {
    "name": "Paulo Panissa Filho",
    "email": "p@paulopanissa.dev",
    "url": "https://paulopanissa.dev"
  },
  "build": {
    "appId": "com.si.paulopanissa.dev",
    "productName": "Sistema de Atendimento",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-paulopanissa.dev.utilities"
    },
    "win": {
      "publish": [
        "github"
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@sentry/browser": "^5.6.1",
    "axios": "^0.21.1",
    "crypto": "^1.0.1",
    "dotenv": "^8.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.1.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "reactotron-react-js": "^3.3.2",
    "reactotron-redux": "^3.1.1",
    "reactotron-redux-saga": "^4.2.2",
    "redux": "^4.0.4",
    "redux-saga": "^1.0.5",
    "reduxsauce": "^1.1.0",
    "seamless-immutable": "^7.1.4"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder -mwl - always"
  },
  "release": "build",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.11",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.2",
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "rescripts": [
    "env"
  ]
}
